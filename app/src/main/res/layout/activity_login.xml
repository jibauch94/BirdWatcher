<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.example.jibba.birdwatcher.LoginActivity">

    <include
        android:id="@+id/action_bar"
        layout="@layout/app_bar">

    </include>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/layout_mail_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editEmail1"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:hint="Email Adresse"
            android:textColorHint="@android:color/white"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:textColorHighlight="@android:color/white"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editPassword"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:hint="Adgangskode"
            android:textColorHint="@android:color/white"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHighlight="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/forgotPassText"
            android:text="Glemt adgangskode?\nKlik her"
            android:textSize="15dip"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"/>


        <Button
            android:id="@+id/loginBtn2"
            android:layout_marginTop="160dp"
            android:layout_marginBottom="50dp"
            android:background="@android:color/holo_blue_light"
            android:textStyle="bold"
            android:text="Log ind"
            android:textSize="40dp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="130dp" />


    </LinearLayout>

</ScrollView>

</RelativeLayout>
